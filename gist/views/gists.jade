extends layout

block content
  each gist in gists
    div.gist-list  
      a(href=("/gists/detail/"+gist.id) target="_blank") #{gist.name}
      a.btn.btn-light(href=("/gists/modify/"+gist.id)) 修改    
      a.btn.btn-light(href=("javascript:remove_gist('"+gist.id+"');")) 删除

  form(action="/gists/save", method="post")
    div
      input(name="name")
      select(name="type")
        option(value="php") PHP
        option(value="javascript") JavaScript
    div
      textarea(name="code", cols="30", rows="10") 
    div
      button(type="submit") 保存代码